{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "airbnb-base",
    "plugin:cypress/recommended",
    "eslint:recommended",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-shadow": "off",
    "linebreak-style": 0,
    "quotes": 0,
    "comma-dangle": "off",
    "no-alert": "off",
    "no-restricted-globals": "off",
    "import/prefer-default-export": "off"
  },
  "plugins": ["jest"]
}
